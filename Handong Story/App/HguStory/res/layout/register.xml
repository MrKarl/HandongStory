<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true" >
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#ffd3d3d3"
        android:gravity="center"
        android:text="회원가입"
        android:textSize="20sp" />
    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="5sp"
        android:background="#ffff0000" />

    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="1sp"
		android:background="#ff000000" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="132dp" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="70sp"
                    android:layout_height="30sp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:text="약관동의"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textView2"
                    android:text="이용약관에 동의합니다."
                    android:textSize="13sp" />

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/checkBox1"
                    android:text="개인정보 취급 약관에 동의합니다."
                    android:textSize="13sp" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="wrap_content"
                    android:layout_height="3sp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textView2"
                    android:background="#ff000000" />

                <Button
                    android:id="@+id/button2"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/checkBox2"
                    android:text="자세히" />

                <Button
                    android:id="@+id/button1"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/button2"
                    android:layout_alignParentBottom="true"
                    android:text="자세히" />

            </RelativeLayout>

            <View
                android:id="@+id/view4"
                android:layout_width="wrap_content"
                android:layout_height="3sp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView2"
                android:background="#ff000000" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent" >

                <TextView
                    android:id="@+id/defaultInfo"
                    android:layout_width="70sp"
                    android:layout_height="30sp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:text="기본정보"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view5"
                    android:layout_width="wrap_content"
                    android:layout_height="3sp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/defaultInfo"
                    android:background="#ff000000" />

                <TextView
                    android:id="@+id/nametext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/idfield"
                    android:layout_below="@+id/view5"
                    android:text="이름"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/namefield"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/nametext"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/nametext"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionNext" />

                <TextView
                    android:id="@+id/idtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/idfield"
                    android:layout_below="@+id/namefield"
                    android:layout_marginTop="14dp"
                    android:text="아이디"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/idfield"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/idtext"
                    android:layout_centerHorizontal="true"
                    android:ems="10"
                    android:hint="4자 ~16자"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress" />

                <TextView
                    android:id="@+id/pwtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/idfield"
                    android:layout_below="@+id/idfield"
                    android:text="비밀번호"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/pwfield"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pwtext"
                    android:layout_centerHorizontal="true"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:imeOptions="actionNext" />

                <TextView
                    android:id="@+id/pwconfirmtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/pwfield"
                    android:layout_below="@+id/pwfield"
                    android:layout_centerVertical="true"
                    android:text="비밀번호 확인"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/pwconfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pwconfirmtext"
                    android:layout_centerHorizontal="true"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:imeOptions="actionNext" />

                <TextView
                    android:id="@+id/phonetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/pwconfirm"
                    android:layout_below="@+id/pwconfirm"
                    android:text="휴대폰번호"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/phonefield"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/phonetext"
                    android:layout_centerHorizontal="true"
                    android:ems="10"
                    android:inputType="numberSigned"
                    android:imeOptions="actionNext" />

                <TextView
                    android:id="@+id/emailtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/phonefield"
                    android:layout_below="@+id/phonefield"
                    android:text="이메일"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/email1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/emailtext"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionNext" >

                    <requestFocus />
                </EditText>

                <TextView
                    android:id="@+id/attext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/email1"
                    android:layout_alignBottom="@+id/email1"
                    android:layout_toRightOf="@+id/email1"
                    android:gravity="bottom"
                    android:text="\@"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/email2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/email1"
                    android:layout_marginTop="11dp"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionNext" />

                <TextView
                    android:id="@+id/proftext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/email2"
                    android:layout_below="@+id/email2"
                    android:text="교수님 성함"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/professorfield"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/proftext"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionNext" />

                <TextView
                    android:id="@+id/majortext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/professorfield"
                    android:layout_below="@+id/professorfield"
                    android:text="전공"
                    android:textSize="13sp"
                    android:textStyle="bold" />
                
                <EditText
                    android:id="@+id/majorfield"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/majortext"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionNext" />

                <TextView
                    android:id="@+id/positiontext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/majorfield"
                    android:layout_below="@+id/majorfield"
                    android:text="직책"
                    android:textSize="13sp"
                    android:textStyle="bold" />
                
                

                <RadioGroup
                    android:id="@+id/positionfield"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/positiontext"
                    android:layout_alignLeft="@+id/positiontext">
                    <RadioButton
                        android:id="@+id/position_captain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/positiontext"
                        android:checked="true"
                        android:text="팀장" />
					<RadioButton
                        android:id="@+id/position_member"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/position_captain"
                        android:text="팀원" />
					
                    <RadioButton
                        android:id="@+id/position_prof"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/position_member"
                        android:text="교수님" />                    
                </RadioGroup>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8.68" >

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="확인" />

            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>